<div class="flex items-center justify-center w-full h-screen bg-gray-100">
  <div>
    <h2 class="text-center text-xl mb-3 font-bold">Log in</h2>
    <div class="w-96 max-w-xs">
      <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mb-4">
          <%= f.label :email, class: 'block text-gray-700 text-sm font-bold mb-2' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-teal-500' %>
        </div>
        <div class="field mb-2">
          <%= f.label :password, class: 'block text-gray-700 text-sm font-bold mb-2' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-teal-500' %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field mb-6">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="flex flex-col items-center justify-between">
          <%= f.submit "Log in", class: 'w-full bg-teal-500 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outlin mb-3 cursor-pointer' %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
      </div>
      <p class="text-center text-gray-500 text-xs">
        &copy;2020 Acme Corp. All rights reserved.
      </p>
    </div>
  </div>
</div>

